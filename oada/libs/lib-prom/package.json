{
  "name": "@oada/lib-prom",
  "version": "4.0.1",
  "description": "OADA Prometheus library",
  "main": "./dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "src/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "yarn g:tsc",
    "clean": "yarn run build --clean",
    "test": "yarn run build test && ava"
  },
  "ava": {
    "typescript": {
      "extensions": [
        "ts"
      ],
      "rewritePaths": {
        "src/": "dist/",
        "test/": ".test/"
      },
      "compile": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OADA/@oada/lib-kafka.git"
  },
  "author": "Alex Layton <alex@layton.in>",
  "license": "Apache-2.0",
  "dependencies": {
    "@oada/lib-config": "workspace:^",
    "prom-client": "^15.1.3",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@ava/typescript": "^6.0.0",
    "@types/convict": "^6.1.6",
    "@types/node": "^24.6.0",
    "@types/ws": "^8.18.1",
    "ava": "6.4.1",
    "fastify-plugin": "^5.1.0"
  },
  "volta": {
    "node": "22.5.1"
  },
  "optionalDependencies": {
    "nstats": "^7.0.0"
  }
}

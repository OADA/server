{
  "name": "@oada/lib-kafka",
  "version": "3.10.0",
  "description": "OADA Kafka library",
  "main": "./dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "src/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "yarn g:tsc",
    "clean": "yarn run build --clean",
    "test": "yarn run build test && ava"
  },
  "ava": {
    "typescript": {
      "extensions": [
        "ts"
      ],
      "rewritePaths": {
        "src/": "dist/",
        "test/": ".test/"
      },
      "compile": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OADA/@oada/lib-kafka.git"
  },
  "author": "Alex Layton <alex@layton.in>",
  "license": "Apache-2.0",
  "dependencies": {
    "@oada/lib-config": "^3.7.0",
    "cls-rtracer": "^2.6.3",
    "debug": "^4.3.4",
    "eventemitter3": "^5.0.1",
    "kafkajs": "^2.2.4",
    "ksuid": "^3.0.0",
    "tslib": "2.6.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@types/convict": "^6.1.6",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.11.17",
    "@types/uuid": "^9.0.8",
    "ava": "6.1.1"
  },
  "volta": {
    "node": "20.2.0"
  }

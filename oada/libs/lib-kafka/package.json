{
  "name": "@oada/lib-kafka",
  "version": "4.0.0",
  "description": "OADA Kafka library",
  "main": "./dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "src/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "yarn g:tsc",
    "clean": "yarn run build --clean",
    "test": "yarn run build test && ava"
  },
  "ava": {
    "typescript": {
      "extensions": [
        "ts"
      ],
      "rewritePaths": {
        "src/": "dist/",
        "test/": ".test/"
      },
      "compile": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OADA/@oada/lib-kafka.git"
  },
  "author": "Alex Layton <alex@layton.in>",
  "license": "Apache-2.0",
  "dependencies": {
    "@oada/lib-config": "workspace:^",
    "cls-rtracer": "^2.6.3",
    "debug": "^4.4.0",
    "eventemitter3": "^5.0.1",
    "kafkajs": "^2.2.4",
    "ksuid": "^3.0.0",
    "tslib": "2.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@types/convict": "^6.1.6",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.13.9",
    "@types/uuid": "^10.0.0",
    "ava": "6.2.0"
  },
  "volta": {
    "node": "22.5.1"
  }
}

    "@oada/pino-debug": "^3.7.0",
    "@oada/types": "^3.4.6",
    "@oada/well-known-json": "^4.0.0",
    "arangojs": "^8.2.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chalk": "^5.2.0",
    "clone-deep": "^4.0.1",
    "connect-arango": "^1.0.0-beta1",
    "connect-ensure-login": "^0.1.1",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "ejs": "^3.1.9",
    "es-main": "^1.2.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "got": "^12.6.0",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "jwt-bearer-client-auth": "^2.0.3",
    "minimist": "^1.2.8",
    "morgan": "^1.10.0",
    "oauth2orize": "^1.11.1",
    "oauth2orize-openid": "^0.4.1",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",

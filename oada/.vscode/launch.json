  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch current workspace",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start"],
      "outputCapture": "std",
      "env": {
        "PORT": "8080",
        "DEBUG": "*",
        "NODE_ENV": "development",
        "DOMAIN": "localhost",
        "TOKEN": "god"
      },
      "cwd": "${fileWorkspaceFolder}",
      "preLaunchTask": "${defaultBuildTask}",
      "outFiles": ["${fileWorkspaceFolder}/dist/*.js"]
    }
  ]
}
